{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block header %}

    <p class="title-of-page">Categories</p>

{% endblock %}

{% block body %}

    {% for message in app.flashes('notice') %}

        <div class="alert alert-danger">
            {{ message }}
        </div>

    {% endfor %}

    <div class="jumbotron">

        <h1 class="entity-name">Categories</h1>

        <div class="row">
            <div class="col entity-field"></div>
            <div class="col entity-field">Id</div>
            <div class="col entity-field">name</div>
            <div class="col entity-field">description</div>
            <div class="col entity-field">add_date</div>
            <div class="col entity-field">last_modified_date</div>
            <div class="col entity-field">actions</div>
        </div>

        {% for product_category in product_categories %}

            <div class="row entity-list-item">
                <div class="col">
                    <div class="main-image" {% if product_category.mainImage is not null %} style="background: url('{{ asset('uploads/images/') }}{{ product_category.mainImage.name }}')" {% endif %}></div>
                </div>
                <div class="col">{{ product_category.id }}</div>
                <div class="col">{{ product_category.name }}</div>
                <div class="col">{{ product_category.description }}</div>
                <div class="col">{{ product_category.AddDate ? product_category.AddDate|date('Y-m-d') : '' }}</div>
                <div class="col">{{ product_category.LastModifiedDate ? product_category.LastModifiedDate|date('Y-m-d') : '' }}</div>
                <div class="col">
                    <a href="{{ path('product_category_show', {'id': product_category.id}) }}"><button type="button" class="btn btn-outline-primary">Show</button></a>
                    <a href="{{ path('product_category_edit', {'id': product_category.id}) }}"><button type="button" class="btn btn-outline-primary">Edit</button></a>
                </div>
            </div>

        {% else %}

            <p>no records found</p>

        {% endfor %}

        <br>

        <a href="{{ path('product_category_new') }}"><button class="btn btn-primary">Create new</button></a>

        <br><br>

        <a href="{{ path('import', {'name':'category'}) }}"><button class="btn btn-primary">Import from CSV</button></a>

    </div>

{% endblock %}