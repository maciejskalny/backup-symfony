{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block header %}

    <p>Products / {{ product.name }}</p>

{% endblock %}

{% block body %}
    <h1>Product</h1>

    <div class="row">
        <div class="col">Id</div>
        <div class="col">{{ product.id }}</div>
    </div>

    <div class="row">
        <div class="col">name</div>
        <div class="col">{{ product.name }}</div>
    </div>

    <div class="row">
        <div class="col">description</div>
        <div class="col">{{ product.description }}</div>
    </div>

    <div class="row">
        <div class="col">add_date</div>
        <div class="col">{{ product.AddDate ? product.AddDate|date('Y-m-d') : '' }}</div>
    </div>

    <div class="row">
        <div class="col">last_modified_date</div>
        <div class="col">{{ product.LastModifiedDate ? product.LastModifiedDate|date('Y-m-d') : '' }}</div>
    </div>


    <button type="button" class="btn btn-outline-primary"><a href="{{ path('product_index') }}">back to list</a></button>

    <button type="button" class="btn btn-outline-primary"><a href="{{ path('product_edit', {'id': product.id}) }}">edit</a></button>

    {{ include('product/_delete_form.html.twig') }}

{% endblock %}