{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block header %}

    <p class="title-of-page">Products / {{ product.name }}</p>

{% endblock %}

{% block body %}

    <div class="jumbotron">
    <h1 class="entity-name">Product</h1>

    <div class="row entity-list-item">
        <div class="col">Id</div>
        <div class="col">{{ product.id }}</div>
    </div>

    <div class="row entity-list-item">
        <div class="col">name</div>
        <div class="col">{{ product.name }}</div>
    </div>

    <div class="row entity-list-item">
        <div class="col">description</div>
        <div class="col">{{ product.description }}</div>
    </div>

    <div class="row entity-list-item">
        <div class="col">add_date</div>
        <div class="col">{{ product.AddDate ? product.AddDate|date('Y-m-d') : '' }}</div>
    </div>

    <div class="row entity-list-item">
        <div class="col">last_modified_date</div>
        <div class="col">{{ product.LastModifiedDate ? product.LastModifiedDate|date('Y-m-d') : '' }}</div>
    </div>

        <p class="entity-field">Images:</p>
        <span class="entity-list">
            <div class="row">

                {% for image in product.image %}

                    <div class="gallery_product col-lg-2 col-md-2 col-sm-2 col-xs-6 filter hdpe">
                            <img width="100px" height="100px" src="{{ asset('uploads/images/') }}{{ image.name }}" class="img-responsive">
                        </div>

                {% else %}

                    <li>no images found</li><br>

                {% endfor %}

            </div>
        </span>


        <br>
        <br>

        {{ include('wishlist/_additem_form.html.twig') }}

        <br>

        <a href="{{ path('product_index') }}"><button type="button" class="btn btn-dark">Back to list</button></a>

        <br>
        <br>

        <a href="{{ path('product_edit', {'id': product.id}) }}"><button type="button" class="btn btn-dark">Edit</button></a>

        <br>
        <br>

        {{ include('product/_delete_form.html.twig') }}

    </div>

{% endblock %}