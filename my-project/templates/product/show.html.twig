{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block header %}

    <p>Products / {{ product.name }}</p>

{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>description</th>
            <td>{{ product.description }}</td>
        </tr>
        <tr>
            <th>add_date</th>
            <td>{{ product.AddDate ? product.AddDate|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>last_modified_date</th>
            <td>{{ product.LastModifiedDate ? product.LastModifiedDate|date('Y-m-d') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <button type="button" class="btn btn-outline-primary"><a href="{{ path('product_index') }}">back to list</a></button>

    <button type="button" class="btn btn-outline-primary"><a href="{{ path('product_edit', {'id': product.id}) }}">edit</a></button>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}